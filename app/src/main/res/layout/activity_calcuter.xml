<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a89370.CalcuterActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@android:style/Theme.Black.NoTitleBar">

        <TextView
            android:id="@+id/calc_tv"
            style="@style/TitleStyle"
            android:text="计算器"/>


        <EditText
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:layout_below="@+id/calc_tv"
            android:layout_marginTop="15dp"
            />


        <Button
            android:id="@+id/deleteAll"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/result"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:gravity="end|right|bottom"
            android:text="C"
            android:textSize="20sp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/result"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/deleteAll"
            android:gravity="end|right|bottom"
            android:text="DEL"
            android:textSize="20sp" />

        <Button
            android:id="@+id/division"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/result"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/delete"
            android:gravity="end|right|bottom"
            android:text="/"
            android:textSize="20sp" />

        <Button
            android:id="@+id/multiplication"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/result"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/division"
            android:gravity="end|right|bottom"
            android:text="*"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Numb7"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/deleteAll"
            android:layout_marginLeft="10dp"
            android:gravity="end|right|bottom"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Numb8"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/delete"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/Numb7"
            android:gravity="end|right|bottom"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Numb9"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/division"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/Numb8"
            android:gravity="end|right|bottom"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/subtraction"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/multiplication"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/Numb9"
            android:gravity="end|right|bottom"
            android:text="-"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Numb4"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Numb7"
            android:layout_marginLeft="10dp"
            android:gravity="end|right|bottom"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Numb5"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Numb8"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/Numb4"
            android:gravity="end|right|bottom"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Numb6"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Numb9"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/Numb5"
            android:gravity="end|right|bottom"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/addition"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/subtraction"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/Numb9"
            android:gravity="end|right|bottom"
            android:text="+"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Numb1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Numb4"
            android:layout_marginLeft="10dp"
            android:gravity="end|right|bottom"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Numb2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Numb5"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/Numb1"
            android:gravity="end|right|bottom"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Numb3"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Numb6"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/Numb2"
            android:gravity="end|right|bottom"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/getResult"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_below="@id/addition"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/Numb3"
            android:gravity="end|right|bottom"
            android:text="="
            android:textSize="20sp" />

        <Button
            android:id="@+id/Numb0"
            android:layout_width="148.5dp"
            android:layout_height="60dp"
            android:layout_below="@id/Numb1"
            android:layout_marginLeft="10dp"
            android:gravity="end|right|bottom"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/point"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@id/Numb1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/Numb0"
            android:gravity="end|right|bottom"
            android:text="."
            android:textSize="20sp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
